{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
        "@utils/*": ["src/utils/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "Node",
    },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}